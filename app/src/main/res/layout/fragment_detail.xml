<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/bg_imageUrl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="top"
        fresco:placeholderImage="@drawable/ic_baseline_image_24"
        fresco:failureImage="@drawable/ic_baseline_image_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_extra_large"
            android:text="@string/title_hint"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_view_detail"
            android:layout_width="match_parent"
            android:text="@string/detail_hint"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_like_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/ic_like_off"/>

    </LinearLayout>

</LinearLayout>